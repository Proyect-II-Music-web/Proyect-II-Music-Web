<section class="section">
  <div class="container">
    <div class="row">
      <div class="container w-50 m-auto">
        <h1 class="mb-1 text-center">Inicia sesión</h1>
          <form action="/user/login" method="POST">
            <label for="email">Email
              <span class="required">*</span></label>
            <input
              type="email"
              class="form-control"
              name="email"
              id="email"
            />
            <label for="password">Contraseña
              <span class="required">*</span></label>
            <input
              type="password"
              class="form-control"
              name="password"
              id="password"
            /> 
            <button class="btn btn-primary w-100 py-2 mb-4 mt-3">
              Iniciar Sesión
            </button>
            {{#if errors.message}}
              <div class="alert alert-danger my-4" role="alert">
                {{errors.message}}
              </div>
            {{/if}}
          </form>
        <p class="text-center small mb-2">¿Aun no tienes una cuenta?
          <a href="/user/register">Regístrate</a></p>
      </div>
    </div>
  </div>
</section>