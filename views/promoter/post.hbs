<div class="container mt-5">
    <div class="col-md-8 m-auto"> <!-- Aquí se define el ancho del formulario -->
        <h1>Crea un Nuevo Evento</h1>
        <form action="/promoter/post-event" method="POST">
            <div class="form-group mb-3">
                <label for="title">Nombre del Evento:</label>
                <input value="{{values.title}}" type="text" class="form-control {{#if errors.title}}is-invalid{{/if}}" id="title" name="title">
                {{#if errors.title}}
                <div class="invalid-feedback">
                    {{errors.title}}
                </div>
                {{/if}}
            </div>

            <div class="form-group mb-3">
                <label for="description">Descripción:</label>
                <textarea class="form-control {{#if errors.description}}is-invalid{{/if}}" id="description" name="description" rows="3">{{values.description}}</textarea>
                {{#if errors.description}}
                <div class="invalid-feedback">
                    {{errors.description}}
                </div>
                {{/if}}
            </div>

            <div class="form-group mb-3">
                <label for="tags">Generos (separar por comas):</label>
                <input value="{{values.tags}}" type="text" class="form-control {{#if errors.tags}}is-invalid{{/if}}" id="tags" name="tags">
                {{#if errors.tags}}
                <div class="invalid-feedback">
                    {{errors.tags}}
                </div>
                {{/if}}
            </div>

            <div class="form-group mb-3">
                <label for="date">Fecha:</label>
                <input value="{{values.date}}" type="date" class="form-control {{#if errors.date}}is-invalid{{/if}}" id="date" name="date">
                {{#if errors.date}}
                <div class="invalid-feedback">
                    {{errors.date}}
                </div>
                {{/if}}
            </div>

            <div class="form-group mb-3">
                <label for="place">Lugar:</label>
                <input value="{{values.place}}" type="text" class="form-control {{#if errors.place}}is-invalid{{/if}}" id="place" name="place">
                {{#if errors.place}}
                <div class="invalid-feedback">
                    {{errors.place}}
                </div>
                {{/if}}
            </div>

            <div class="form-group mb-3">
                <label for="maxForum">Máximo Foro:</label>
                <input value="{{values.maxForum}}" type="number" class="form-control {{#if errors.maxForum}}is-invalid{{/if}}" id="maxForum" name="maxForum">
                {{#if errors.maxForum}}
                <div class="invalid-feedback">
                    {{errors.maxForum}}
                </div>
                {{/if}}
            </div>


            <button type="submit" class="btn btn-primary">Crear</button>
        </form>
    </div>
</div>